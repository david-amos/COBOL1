Variable declarations
	alfa numeric: I-LAST-NAME, I-STATE, I-BOAT-TYPE, MORE-RECS = 'YES', H-BOAT-TYPE
	NUMERIC: I-BOAT-COST, I-PURCHASE-DATE, I-ACCESSORY-PACKAGE, I-PREP-DELIVER-COST
	NUMERIC CALCULATED: C-TOTAL-COST, C-BOAT-CTR = 0, C-MJ-TOTAL-COST = 0, C-GT-BOAT-CTR = 0, C-GT-TOTAL-COST = 0, C-DATE, C-PCTR = 0
	ALFA NUMERIC OUTPUT: O-DATE, O-PCTR, O-BOAT-TYPE, O-LAST-NAME, O-STATE, O-BOAT-COST, O-PURCHASE-DATE, O-ACCESSORY-PACKAGE, 
		O-PREP-DELIVER-COST, O-TOTAL-COST, O-BOAT-CTR, O-MJ-TOTAL-COST, O-GT-BOAT-CTR, O-GT-TOTAL-COST
		
0000-MAIN
	PERFORM INIT
	PERFORM MAINLINE
		UNTIL MORE-RECS = 'NO'
	PERFORM CLOSING
	
1000-INIT
	OPEN INPUT FILE
	OPEN OUTUT FILE
	REQUEST DATE
	GET C-DATE
	O-DATE = C-DATE
	PERFORM 9100-READ
	PERFORM 9200-HEADINGS
	H-BOAT-TYPE = I-BOAT-TYPE
	
2000-MAINLINE
	IF H-BOAT-TYPE != I-BOAT-TYPE
		PERFORM 9000-MAJORBREAK
	PERFORM 2100-CALCS
	PERFORM 2200-OUTPUT
	PERFORM 9100-READ
	
2100-CALCS
	ADD I-BOAT-COST TO I-PREP-DELIVER-COST GIVING C-TOTAL-COST
	ADD C-TOTAL-COST TO C-MJ-TOTAL-COST
	ADD 1 TO C-BOAT-CTR
	
2200-OUTPUT
	
	O-LAST-NAME = I-LAST-NAME
	O-STATE = I-STATE
	O-BOAT-COST = I-BOAT-COST
	O-PURCHASE-DATE = I-PURCHASE-DATE
	CASE I-ACCESSORY-PACKAGE
		1
			O-ACCESSORY-PACKAGE = "ELECTRONICS"
		2
			O-ACCESSORY-PACKAGE = 'SKI PACKAGE'
		3
			O-ACCESSORY-PACKAGE = 'FISHING PACKAGE'
			
	O-PREP-DELIVER-COST = I-PREP-DELIVER-COST
	O-TOTAL-COST = C-TOTAL-COST
	
	PRINT DETAIL LINE
		IF EOP CALL HEADINGS
	
3000-CLOSING
	PERFORM 9000-MAJORBREAK
	PERFORM 3100-GRANDTOTALS
	CLOSE INPUT FILE
	CLOSE OUTPUT FILE
	
3100-GRANDTOTALS
	O-GT-BOAT-CTR = C-GT-BOAT-CTR
	O-GT-TOTAL-COST = C-GT-TOTAL-COST
	PRINT BLANK LINE
	PRINT BLANK LINE
	PRINT GT LINE
	
9000-MAJORBREAK
	O-BOAT-CTR = C-BOAT-CTR
	O-MJ-TOTAL-COST = C-MJ-TOTAL-COST
	PRINT BLANK LINE
	PRINT MAJORBREAK LINE
	PRINT BLANK LINE
	CASE I-BOAT-TYPE
	'B'
		O-BOAT-TYPE = 'BASS BOAT'
	'P'
		O-BOAT-TYPE = 'PONTOON'
	'S' 
		O-BOAT-TYPE = 'SKI BOAT'
	'J'
		O-BOAT-TYPE = 'JOHN BOAT'
	'C'
		O-BOAT-TYPE = 'CANOE'
	'R'
		O-BOAT-TYPE = 'CABIN CRUISER'
		
	PRINT BOAT-TYPE LINE
	PRINT BLANK LINE
	
	C-GT-BOAT-CTR += C-BOAT-CTR
	C-GT-TOTAL-COST += C-TOTAL-COST
	H-BOAT-TYPE = I-BOAT-TYPE
	
	C-BOAT-CTR = 0
	C-MJ-TOTAL-COST = 0
	
9100-READ
	READ RECORD
		IF EOF
			MORE-RECS = 'YES'
	
9200-HEADINGS
	CASE I-BOAT-TYPE
	'B'
		O-BOAT-TYPE = 'BASS BOAT'
	'P'
		O-BOAT-TYPE = 'PONTOON'
	'S' 
		O-BOAT-TYPE = 'SKI BOAT'
	'J'
		O-BOAT-TYPE = 'JOHN BOAT'
	'C'
		O-BOAT-TYPE = 'CANOE'
	'R'
		O-BOAT-TYPE = 'CABIN CRUISER'
	C-PCTR += 1
	O-PCTR = C-PCTR
	
	PRINT COMPANY TITLE LINE
	PRINT BLANK LINE
	PRINT COLLUMN HEADINGS1
	PRINT COLLUMN HEADINGS2
	PRINT BLANK
	PRINT BOAT TYPE LINE
	PRINT BLANK LINE
	

	