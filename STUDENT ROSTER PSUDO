Variable Definitions
	Alphanumeric - I-REC, I-ID, I-NAME, I-LNAME, I-FNAME, I-INIT, O-DATE, O-PCTR, O-GPA, O-START-SALARY, 
		O-ID, O-LNAME, O-FNAME, O-SCTR, EOF = "NO"
	Numeric I-GPA, I-START-SALARY, I-DATE, C-SCTR=0, C-PCTR=0
	
MAIN
	CALL INIT
	WHILE EOF = "NO"
		CALL DETAIL
	CALL CLOSING
	
DETAIL
	CALL CALCS
	CALL OUTPUT
	CALL READ
	
CALCS
	C-SCTR += 1
	
OUTPUT
	O-ID = I-ID
	O-LNAME = I-LNAME
	O-FNAME = I-FNAME
	O-GPA = I-GPA
	O-START-SALARY = I-START-SALARY
	
	PRINT DETAIL LINE
	PRINT BLANK LINE
	IF END OF PAGE 
		CALL HDGS
	
INIT
	OPEN INPUT FILE
	OPEN OUTPUT FILE
	REQUEST SYSTEM DATE
	GET I-DATE
	O-DATE = I-DATE
	CALL READ
	CALL HDGS
	
READ
	READ RECORD, I-REC, I-ID, I-NAME, I-LNAME, I-FNAME, I-INIT, I-GPA, I-START-SALARY
	IF END OF FILE
		EOF = "YES"
		
HDGS.
	C-PCTR += 1
	O-PCTR = C-PCTR
	PRINT TITLE LINE
	PRINT BLANK LINE
	PRINT COL HDG LINE 1
	PRINT COL HDG LINE 2
	PRINT BLANK LINE
	
CLOSING
	PRINT BLANK LINE
	O-SCTR = C-SCTR
	PRINT TOTAL LINE
	CLOSE INPUT FILE
	CLOSE OUTPUT FILE 